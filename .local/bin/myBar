#!/bin/bash

trap 'update' 5

FG="#c3cdc8"
BG="#000000"
WHITE="^fg(#c3cdc8)^bg()"
GREEN="^fg(#947cc3)^bg()"
YELLOW="^fg(#F4F99D)^bg()"
RED="^fg(#FF6E67)^bg()"
WHITE="^fg(#E6E6E6)^bg()"
PINK="^fg(#FF92D0)^bg()"
BLUE="^fg(#477d8f)^bg()"
MAGENTA="^fg(#CAA9FA)^bg()"
TROP="^fg(#CAA9FA)^bg()"

CLEAN="^fg()^bg()"


mpd(){
  song="$(mpc current)"
  status="$(mpc status | grep paused | awk '{print $2}')"
  echo -e "$song"

}


xwin(){
  xwindow=$(echo "Active Window: $GREEN`echo $(xdotool getwindowfocus getwindowclassname)`$CLEAN")
  echo -e "$xwindow"

}

wtr(){
  weat=$(curl 'wttr.in?format=%c')
  weat1=$(curl 'wttr.in?format=%t')
  weat2=$(curl 'wttr.in?format=%p')
  echo -e "îŒ†  $weat1"
}

temp(){
  #temp="$(sensors | awk '/^Tdie:/ {print $2}')"
  temp="$(sensors | awk '/Core 0/ {print $3}')"
  echo -e "ï´¦ $temp"
}

mem(){
  mem=`free | awk '/Mem/ {printf "%d MiB/%d MiB\n", $3 / 1024.0, $2 / 1024.0 }'`
  echo -e "ï¡š $mem"

}

vol() {
   vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
    icon="ðŸ”Š"
elif [ "$vol" -gt "30" ]; then
    icon="ðŸ”‰"
elif [ "$vol" -gt "0" ]; then
    icon="ðŸ”ˆ"
else
        echo ðŸ”‡ && exit
fi

echo "ï€¨ $vol%"

}

mhdd() {
    mhdd="$(df -h / | awk 'FNR==2 { gsub(/[A-Za-z]/, ""); printf $4 }')"
    echo "îœ† $mhdd GB"
}

workspace() {
    AWS="$(xprop -root '\t$0' _NET_CURRENT_DESKTOP | cut -f 2)"
    WS="^fg(#c3cdc8)Workspace $(expr \( $AWS \))" 
    NWS="$(xprop -root '\t$0' _NET_NUMBER_OF_DESKTOPS | cut -f 2)"

echo "$WS"

}

temp(){
  #temp="$(sensors | awk '/^Tdie:/ {print $2}')"
  temp="$(sensors | awk '/Core 0/ {print $3}')"
  echo -e "îž€ $temp"

}

dte(){
  dte="$(date +"%Y.%m.%d")"
  echo -e "$dte"
}

dte2(){
  dte2="$(date +"%H:%M")"
  echo -e "$dte2"
}

work(){
  workspaces=`sdorfehs -c "vscreens"`
        echo "$workspaces" |
while read name; do
    if [[ "$name" =~ "*" ]]
    then
        selected=`echo $name | cut -c 3-`
        echo -n "^fg(#c3cdc8)^bg(#947cc3) $selected $CLEAN"
    else
        notselected=`echo $name | cut -c 3-`
        echo -n " $notselected "
    fi

done

}

SLEEP_SEC=0.2

#loops forever outputting a line every SLEEP_SEC secs
while true; do
   echo "$(mhdd)$CLEAN" > ~/.config/sdorfehs/bar
sleep $SLEEP_SEC
done 


